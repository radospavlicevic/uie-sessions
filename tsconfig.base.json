{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@uie-sessions/shared/storybook": ["libs/shared/storybook/src/index.ts"],
      "@uie-sessions/shared/types": ["libs/shared/types/src/index.ts"],
      "@uie-sessions/shared/ui/control-group/factory": [
        "libs/shared/ui/control-group/factory/src/index.ts"
      ],
      "@uie-sessions/shared/ui/control-group/components": [
        "libs/shared/ui/control-group/components/src/index.ts"
      ],
      "@uie-sessions/shared/ui/icons/factory": [
        "libs/shared/ui/icons/factory/src/index.ts"
      ],
      "@uie-sessions/shared/ui/icons/outline": [
        "libs/shared/ui/icons/outline/src/index.ts"
      ],
      "@uie-sessions/shared/ui/icons/solid": [
        "libs/shared/ui/icons/solid/src/index.ts"
      ],
      "@uie-sessions/shared/ui/typography": [
        "libs/shared/ui/typography/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
